{% extends '::layout.html.twig' %}
{% block title %}
Personnel de la mairie
{% endblock %}
{% block body -%}
    <h1>Personnel list</h1>

    <table class="table table-bordered table-condensed table-hover">
        <thead class="">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Datenaissance</th>
                <th>Lieunaissance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="">
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('personnel_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{% if entity.dateNaissance %}{{ entity.dateNaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.lieuNaissance }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('personnel_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('personnel_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('personnel_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
